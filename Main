import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

public class Main extends JFrame {

    JTextField tempinput, tempoutput;
    JLabel inputlabel, convertlabel, outputlabel, imagelabel;
    JComboBox<String> comboBox1, comboBox2;
    ButtonListener buttonListener;

    public Main() {
        Container c = getContentPane();
        c.setLayout(null);
        c.setBackground(Color.WHITE);
        setTitle("Temperature Converter");
        setSize(400, 300);
        setVisible(true);
        setDefaultCloseOperation(EXIT_ON_CLOSE);

        // Combo boxes
        String[] s1 = {"Celsius", "Fahrenheit", "Kelvin"};
        comboBox1 = new JComboBox<>(s1);
        comboBox1.setBounds(200, 20, 120, 20);
        add(comboBox1);

        String[] s2 = {"Celsius", "Fahrenheit", "Kelvin"};
        comboBox2 = new JComboBox<>(s2);
        comboBox2.setBounds(200, 90, 120, 20);
        add(comboBox2);

        // Labels and fields
        inputlabel = new JLabel("Temperature:");
        inputlabel.setFont(new Font("Arial", Font.BOLD, 14));
        inputlabel.setSize(120, 20);
        inputlabel.setLocation(20, 20);

        convertlabel = new JLabel("Convert to:");
        convertlabel.setFont(new Font("Arial", Font.BOLD, 14));
        convertlabel.setSize(120, 20);
        convertlabel.setLocation(20, 90);

        outputlabel = new JLabel("Output:");
        outputlabel.setFont(new Font("Arial", Font.BOLD, 14));
        outputlabel.setSize(120, 20);
        outputlabel.setLocation(20, 190);

        tempinput = new JTextField(10);
        tempinput.setSize(60, 20);
        tempinput.setLocation(130, 20);

        tempoutput = new JTextField(10);
        tempoutput.setSize(120, 20);
        tempoutput.setLocation(90, 190);
        tempoutput.setEditable(false);

        // Button
        JButton button = new JButton("Convert");
        button.setSize(100, 30);
        button.setLocation(130, 130);
        button.setBackground(Color.LIGHT_GRAY);
        buttonListener = new ButtonListener();
        button.addActionListener(buttonListener);

        // Image (optional)
        imagelabel = new JLabel("");
        imagelabel.setIcon(new ImageIcon("images.png"));
        imagelabel.setBounds(250, 50, 100, 100);

        // Add components
        c.add(inputlabel);
        c.add(convertlabel);
        c.add(outputlabel);
        c.add(tempinput);
        c.add(tempoutput);
        c.add(button);
        c.add(comboBox1);
        c.add(comboBox2);
        c.add(imagelabel);
    }

    private class ButtonListener implements ActionListener {
        public void actionPerformed(ActionEvent e) {
            try {
                String temp = (String) comboBox1.getSelectedItem();
                String tempConvert = (String) comboBox2.getSelectedItem();
                double input = Double.parseDouble(tempinput.getText());
                double output = 0.0;

                if (temp.equals("Celsius") && tempConvert.equals("Fahrenheit"))
                    output = input * 1.8 + 32;
                else if (temp.equals("Celsius") && tempConvert.equals("Kelvin"))
                    output = input + 273.15;
                else if (temp.equals("Fahrenheit") && tempConvert.equals("Celsius"))
                    output = (input - 32) * 5 / 9;
                else if (temp.equals("Fahrenheit") && tempConvert.equals("Kelvin"))
                    output = (input - 32) * 5 / 9 + 273.15;
                else if (temp.equals("Kelvin") && tempConvert.equals("Celsius"))
                    output = input - 273.15;
                else if (temp.equals("Kelvin") && tempConvert.equals("Fahrenheit"))
                    output = (input - 273.15) * 9 / 5 + 32;
                else
                    output = input; // Same unit

                tempoutput.setText(String.format("%.2f", output));
            } catch (NumberFormatException ex) {
                JOptionPane.showMessageDialog(null, "Please enter a valid number!");
            }
        }
    }

    public static void main(String[] args) {
        new Main();
    }
}
